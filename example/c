#!/bin/bash

g++ -std=c++14 \
        -I"/home/vittorioromeo/OHWorkspace/ecs_thesis/project/include" \
        -I"/home/vittorioromeo/OHWorkspace/vrm_core/include" \
        -I"/home/vittorioromeo/OHWorkspace/vrm_pp/include" \
        -fsanitize=undefined \
        -fsanitize=address \
        -g3 \
        -O0 \
        -pedantic \
        -W \
        -Wall \
        -Wextra \
        -lpthread \
        -lsfml-system \
        -lsfml-graphics \
        -lsfml-window \
        -Wno-unused-variable \
        $1 -o /tmp/x.x && echo "Compiled." && /tmp/x.x "${@:2}"
